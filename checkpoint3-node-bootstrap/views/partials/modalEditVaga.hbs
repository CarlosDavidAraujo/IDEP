{{#each vaga}}
<!-- Modal -->
<div class="modal fade" id="{{ID}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content px-4">
            <!-- cabeçalho -->
            <div class="modal-header">
                <!-- Título -->
                <div class="col">
                    <h3 class="modal-title text-primary" id="exampleModalLabel">{{Cargo}}</h3>
                    <h6 class="modal-title" id="exampleModalLabel">Contratação {{Modalidade}}</h6>
                </div>
                <div class="col text-end">
                    <img src="{{url_img}}">
                </div>
                <button type="button" class="btn-close align-self-start" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <!-- Conteudo -->
            <div class="modal-body">
                <div class="d-flex justify-content-between">
                    <div class="col-md-7">
                        <h4>1. Essa vaga é para você?</h4>
                        <div>
                            <legend>
                                <h5>Sobre a vaga</h5>
                            </legend>
                            {{Detalhes.Sobre_a_vaga}}
                        </div>
                        <div>
                            <legend>
                                <h5>Responsabilidades e atribuições</h5>
                            </legend>
                            {{Detalhes.Responsabilidades}}
                        </div>
                        <div>
                            <legend>
                                <h5>Requisitos e qualificações</h5>
                            </legend>
                            {{Detalhes.Requisitos}}
                        </div>
                    </div>
                    <div class="col-md-4">
                        <h4>2. Confira a nossa oferta!</h4>
                        <div class="accordion">
                            <div class="accordion-item" id="accordionBeneficios">
                                <h2 class="accordion-header" id="beneficiosHeadingOne">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#beneficiosCollapseOne" aria-expanded="true" aria-controls="beneficiosCollapseOne">
                                        <h5>Benfícios e vantagens</h5>
                                    </button>
                                </h2>
                                <div id="beneficiosCollapseOne" class="accordion-collapse collapse show"
                                    aria-labelledby="beneficiosHeadingOne" data-bs-parent="#accordionBeneficios">
                                    <div class="accordion-body">
                                        {{Detalhes.Vantagens}}
                                    </div>
                                </div>
                            </div>
                            <h4>3.Conheça a empresa.</h4>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <form method="post" action="/">
                            <input type="hidden" name="vaga_id" value="{{ID}}">
                            <button type="submit" name="action" value="candidatar"
                                class="btn btn-warning">Candidatar-se</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}