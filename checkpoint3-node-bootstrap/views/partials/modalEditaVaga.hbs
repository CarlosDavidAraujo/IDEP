<form method="post" action="/admin/editaVaga">
    <div class="modal fade" id="modalEditarVaga{{ID}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content text-primary">
                <!-- cabeçalho -->
                <div class="modal-header">
                    <div class="d-flex gap-4">
                      <input type="hidden" name="vaga_id" value="{{ID}}">            
                        <div class="form-group">
                            <label class="form-label" for="cargo">Nome da vaga</label>
                            <input class="form-control" type="text" id="cargo" name="cargo" value="{{Cargo}}">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="modalidade">Modalidade</label>
                            <select class="form-control" name="modalidade" id="modalidade">
                                <option value="Jovem Aprendiz">Jovem Aprendiz</option>
                                <option value="Estágio">Estágio</option>
                                <option value="CLT">CLT</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="etapa">Etapa</label>
                            <select class="form-control" name="etapa" id="etapa">
                                <option value="Envio de currículos">Envio de currículos</option>
                                <option value="Entrevista">Entrevista</option>
                                <option value="Finalizado">Finalizado</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="empresa">Empresa</label>
                            <input class="form-control" type="text" id="empresa" name="empresa" value="{{Empresa}}">
                        </div>
                        <div class="form-group align-self-end">
                            <label for="file-uploadEditaVaga"
                                class="custom-file-upload align-items-center justify-content-around">
                                <img id="icon" src="/img/icons/imgUpload.svg">
                                Logotipo da empresa
                            </label>
                            <input id="file-uploadEditaVaga" type="file" name="imgLogo"/>
                        </div>
                    </div>
                    <button type="button" class="btn-close align-self-start" data-bs-dismiss="modal"
                      aria-label="Close"></button>
                </div>
                <!-- Conteudo -->
                <div class="modal-body">
                    <div class="d-flex justify-content-between">
                        <div class="col-md-6">
                            <h3>1. Essa vaga é para você?</h3>
                            <div class="form-group">
                                <label class="form-label" for="sobre_vaga">Sobre a vaga</label>
                                <textarea type="text" class="form-control" id="sobre_vaga" name="sobre_vaga">{{Detalhes.Sobre_a_vaga}}</textarea>
                            </div>
                            <br>
                            <div class="form-group">
                                <label class="form-label" for="responsabilidades">Responsabilidades e
                                    atribuições</label>
                                <textarea type="text" class="form-control " id="responsabilidades"
                                    name="responsabilidades">{{Detalhes.Responsabilidades}}</textarea>
                            </div>
                            <br>
                            <div class="form-group">
                                <label class="form-label" for="requisitos">Requisitos e qualificações</label>
                                <textarea type="text" class="form-control" id="requisitos" name="requisitos">{{Detalhes.Requisitos}}</textarea>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <h3>2. Confira a nossa oferta!</h3>
                            <div class="form-group">
                                <label class="form-label" for="vantagens">Benefícios e vantagens</label>
                                <textarea type="text" class="form-control" id="vantagens" name="vantagens"
                                    style="min-height: 148px">{{Detalhes.Vantagens}}</textarea>
                            </div>
                            <br>
                            <div class="form-group">
                                <label class="form-label" for="remuneracao">Remuneração e carga horária</label>
                                <textarea type="text" class="form-control" id="remuneracao" name="remuneracao"
                                    style="min-height: 148px">{{Detalhes.Remuneração_e_CH}}</textarea>
                            </div>
                            <br>
                            <h3>3. Conheça a empresa.</h3>
                            <div class="form-group">
                                <label class="form-label" for="sobre_empresa">Sobre a empresa</label>
                                <textarea type="text" class="form-control" id="sobre_empresa" name="sobre_empresa"
                                    style="min-height: 175px">{{Detalhes.Sobre_a_empresa}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="d-grid col-2 mx-4">
                        <button type="button" class="btn  btn-outline-danger" data-bs-dismiss="modal"
                            aria-label="Close">Cancelar</button>
                    </div>
                    <div class="d-grid col-2">
                        <button type="submit" class="btn btn-warning">Salvar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#file-uploadEditaVaga').change(function () {
            var i = $(this).prev('label').clone();
            var file = $('#file-uploadEditaVaga')[0].files[0].name;
            $(this).prev('label').text(file);
        });
    });
</script>