{{#each vaga}}
<!-- Modal -->
<div class="modal fade" id="{{ID}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <!-- cabeçalho -->
            <div class="modal-header">
                <!-- Título -->
                <div class="col">
                    <h3 class="modal-title text-primary" id="exampleModalLabel">{{Cargo}}</h3>
                    <h6 class="modal-title" id="exampleModalLabel">Contratação {{Modalidade}}</h6>
                </div>
                <div class="col text-end">
                    <img src="{{url_image}}">
                </div>
                <button type="button" class="btn-close align-self-start" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <!-- Conteudo -->
            <div class="modal-body">
                <div class="row align-items-start">
                    <div class="col d-grid gap-2">
                        <!-- Accordion -->
                        <h5>1. Essa vaga é para você?</h5>
                        <div class="accordion" id="accordionPanelsStayOpenExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#sobreVaga" aria-expanded="false" aria-controls="sobreVaga">
                                        Sobre a vaga
                                    </button>
                                </h2>
                                <div id="sobreVaga" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        {{Detalhes.Sobre_a_vaga}}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#responsabilidades" aria-expanded="false"
                                        aria-controls="responsabilidades">
                                        Responsabilidades e atribuições
                                    </button>
                                </h2>
                                <div id="responsabilidades" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingThree">
                                    <div class="accordion-body">
                                        {{Detalhes.Responsabilidades}}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#requisitos" aria-expanded="false" aria-controls="requisitos">
                                        Requisitos e qualificações
                                    </button>
                                </h2>
                                <div id="requisitos" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        {{Detalhes.Requisitos}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col d-grid gap-2">
                        <!-- Accordion -->
                        <h5>2. Confira a nossa oferta</h5>
                        <div class="accordion" id="accordionPanelsStayOpenExample">

                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#vantagens" aria-expanded="false" aria-controls="vantagens">
                                        Benefícios e vantagens
                                    </button>
                                </h2>
                                <div id="vantagens" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        {{Detalhes.Vantagens}}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#remuneracao" aria-expanded="false" aria-controls="remuneracao">
                                        Remuneração e carga horária
                                    </button>
                                </h2>
                                <div id="remuneracao" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        {{Detalhes.Remuneração_e_CH}}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#sobreEmpresa" aria-expanded="false"
                                        aria-controls="sobreEmpresa">
                                        Sobre a empresa
                                    </button>
                                </h2>
                                <div id="sobreEmpresa" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        {{Detalhes.Sobre_a_empresa}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <form method="post" action="/">
                    <input type="hidden" name="vaga_id" value="{{ID}}">
                    <button type="submit" name="action" value="candidatar"
                        class="btn btn-warning">Candidatar-se</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}