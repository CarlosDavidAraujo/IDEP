<div>
    <H2 class="text-center">Vagas</H2>
</div>
<div class="container">
    <div class="row px-11 justify-content-around">
        {{#each vaga}}
        <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h6 class="card-title">{{Empresa}}</h6>
                    <h6>{{Modalidade}}</h6>
                </div>
                <br>
                <h4 class="card-text">{{Cargo}}</h4>
                <br>
                <!-- Button trigger modal -->
            </div>
            <div class="card-footer border-0 bg-white">
                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#{{ID}}">
                    Ver detalhes
                </button>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{#each vaga}}
<!-- Modal -->
<div class="modal fade" id="{{ID}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content">
            <!-- cabeçalho -->
            <div class="modal-header text-center">
                <!-- Título -->
                <div class="col">
                    <h3 class="modal-title" id="exampleModalLabel">{{Cargo}}</h3>
                    <h6 class="modal-title" id="exampleModalLabel">Contratação {{Modalidade}}</h6>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- Conteudo -->
            <div class="modal-body">
                <div class="row">
                    <div class="col d-grid gap-2">
                        <!-- Accordion -->
                        <div class="accordion" id="accordionPanelsStayOpenExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#sobreVaga" aria-expanded="false" aria-controls="sobreVaga">
                                        Sobre a vaga
                                    </button>
                                </h2>
                                <div id="sobreVaga" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        {{Detalhes.SobreVaga}}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#sobreEmpresa" aria-expanded="false"
                                        aria-controls="sobreEmpresa">
                                        Sobre a empresa
                                    </button>
                                </h2>
                                <div id="sobreEmpresa" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        {{Detalhes.SobreEmpresa}}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingThree">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#responsabilidades" aria-expanded="false"
                                        aria-controls="responsabilidades">
                                        Responsabilidades e atribuições
                                    </button>
                                </h2>
                                <div id="responsabilidades" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingThree">
                                    <div class="accordion-body">
                                        {{Detalhes.Responsabilidades}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col d-grid gap-2">
                        <!-- Accordion -->
                        <div class="accordion" id="accordionPanelsStayOpenExample">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#requisitos" aria-expanded="false" aria-controls="requisitos">
                                        Requisitos e qualificações
                                    </button>
                                </h2>
                                <div id="requisitos" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        {{Detalhes.Requisitos}}
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#vantagens" aria-expanded="false" aria-controls="vantagens">
                                        Benefícios e vantagens
                                    </button>
                                </h2>
                                <div id="vantagens" class="accordion-collapse collapse"
                                    aria-labelledby="panelsStayOpen-headingTwo">
                                    <div class="accordion-body">
                                        {{Detalhes.Vantagens}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <form method="post" action="/">
                    <input type="hidden" name="vaga_id" value="{{ID}}">
                    <button type="submit" name="action" value="candidatar" class="btn btn-warning">Cadidatar-se</button>
                </form>
            </div>
        </div>
    </div>
</div>
{{/each}}