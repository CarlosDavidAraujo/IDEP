<script>
    var cards;
    cards = document.getElementsByClassName('card');
    function meusCards() {
        cards[0].parentElement.classList.add('col-xl-3', 'col-xxl-2');
        cards[1].parentElement.classList.add('col-xl-4', 'col-xxl-3');
        cards[2].parentElement.classList.add('col-xl-3', 'col-xxl-2');
    }
    meusCards();
</script>