<img src="/img/loginImg.png" style="width: 100%;" class="d-none d-sm-block">
<div class="container-fluid px-0 aling-items-center" id="loginContainer">
  <div class="row justify-content-center aling-items-center">
    <div class="col-12 col-sm-8 col-md-6 col-xl-6 col-xxl-4 p-4 p-md-5 p-xl-6 py-xxl-8 bg-primary text-white">
      <form action="/user/login" method="post">
        {{#if mensagemDeErro}}
        <div class="alert alert-danger" role="alert">
          {{mensagemDeErro}}
        </div>
        {{/if}}
        {{#if mensagemReauth}}
        <div class="alert alert-success" role="alert">
          {{mensagemReauth}}
        </div>
        {{/if}}
        {{#if reauthError}}
        <div class="alert alert-danger" role="alert">
          {{reauthError}}
        </div>
        {{/if}}
        <p>
        <p>
        <h3>Seja bem vindo!</h3>
        </p>
        <div>
          <div>
            <label for="email" class="form-label"></label>
            <input type="email" class="form-control-lg border-0" id="email" name="email" placeholder="Email" required>
          </div>
          <div class="mb-3">
            <label for="senha" class="form-label"></label>
            <input type="password" class="form-control-lg border-0" id="senha" name="senha" placeholder="Senha"
              required>
          </div>
          <div class="d-flex justify-content-end" style="margin-top: -4%;">
            <a class="nav-link active text-white" data-bs-toggle="modal" href="#reauth">Recuperar senha</a>
          </div>
        </div>
        <br>
        <div class="d-flex justify-content-between align-items-center ms-5">
          <div class="d-grid col-6">
            <a class="nav-link active text-white" href="/user/cadastro">Cadastre-se</a>
          </div>
          <div class="d-grid col-5">
            <button type="submit" class="btn btn-warning">Entrar</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{{>reauth}}